run = "bash scripts/replit_start.sh"
entrypoint = "main.py"
modules = ["python-3.11"]

hidden = [".pythonlibs", ".cache", ".config", "**/__pycache__", "**/.pytest_cache"]

[nix]
channel = "stable-23_11"

[deployment]
run = ["bash", "scripts/replit_start.sh"]
deploymentTarget = "cloudrun"

[env]
# Replit environment variables
VIRTUAL_ENV = "${REPL_HOME}/venv"
PATH = "${VIRTUAL_ENV}/bin:${PATH}"
PYTHONPATH = "${REPL_HOME}:${PYTHONPATH}"
REPLIT = "true"

# MSLCA Configuration - SQLite mode
MIRIX_DIR = "${REPL_HOME}/.mirix"
MIRIX_IMAGES_DIR = "${REPL_HOME}/.mirix/images"

# Use SQLite for Replit (no PostgreSQL needed)
# PostgreSQL URI intentionally left empty to use SQLite
MIRIX_PG_URI = ""

# Port configuration
PORT = "8080"

[packager]
language = "python3"
ignoredPackages = ["unit_tests"]

[packager.features]
enabledForHosting = false
packageSearch = true
guessImports = true

[languages.python3]
pattern = "**/*.py"

[languages.python3.languageServer]
start = "pylsp"

[unitTest]
language = "python3"

[debugger]
support = true

[debugger.interactive]
transport = "localhost:0"
startCommand = ["dap-python", "main.py"]

[debugger.interactive.integratedAdapter]
dapTcpAddress = "localhost:0"

[[ports]]
localPort = 8080
externalPort = 80

[[ports]]
localPort = 8501
externalPort = 8501

